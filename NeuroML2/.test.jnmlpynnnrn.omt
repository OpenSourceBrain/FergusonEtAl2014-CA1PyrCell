# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation 

target: LEMS_TwoCells.xml
engine: jNeuroML_PyNN_NEURON
mep: ../Brian/.test.mep
experiments:
  weak:
    observables:
      spike times:
        file: 
          path: TwoCells.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 4.65367164116e-05
  strong:
    observables:
      spike times:
        file: 
          path: TwoCells.dat
          columns: [0,2]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0.00012137395315